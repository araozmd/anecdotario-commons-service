# Commons Service Configuration - Default Settings  
# These are static, non-sensitive settings that apply across all environments
# Shared functionality for users, orgs, and other entities

# Image Processing Settings
MAX_IMAGE_SIZE=5242880
IMAGE_JPEG_QUALITY=85
IMAGE_WEBP_QUALITY=85
ENABLE_WEBP_SUPPORT=true

# Multi-version Image Settings (Instagram-style)
THUMBNAIL_SIZE=150
STANDARD_SIZE=320
HIGH_RES_SIZE=800
THUMBNAIL_QUALITY=80
STANDARD_QUALITY=85
HIGH_RES_QUALITY=90

# Security Settings
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.gif
ENABLE_IMAGE_OPTIMIZATION=true

# S3 Settings
S3_CACHE_CONTROL=max-age=31536000
PRESIGNED_URL_EXPIRY=604800

# Performance Settings  
MAX_CLEANUP_SCAN_FILES=100
ENABLE_BATCH_DELETE=true

# Debug Settings
ENABLE_DEBUG_LOGGING=false
LOG_IMAGE_METADATA=true

# Nickname Validation Settings
NICKNAME_MIN_LENGTH=3
NICKNAME_MAX_LENGTH=30
ENABLE_NICKNAME_VALIDATION=true
ENABLE_CONFUSING_CHAR_FILTER=true
ENABLE_RESERVED_WORD_CHECK=true