# Default configuration for Commons Service
# These values are used when no environment variables or SSM parameters are set

# Environment
ENVIRONMENT=dev

# Photo Configuration
PHOTO_TABLE_NAME=Photos-dev
PHOTO_BUCKET_NAME=anecdotario-photos-dev
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
PRESIGNED_URL_EXPIRY=604800

# User-Organization Configuration
USER_ORG_TABLE_NAME=UserOrg-dev

# Parameter Store Configuration
PARAMETER_STORE_PREFIX=/anecdotario/dev/commons-service

# Logging
ENABLE_DEBUG_LOGGING=false

# CORS Configuration (dev allows all, prod is restricted)
ALLOWED_ORIGINS=*

# Nickname Validation
MIN_NICKNAME_LENGTH=3
MAX_NICKNAME_LENGTH=30
ALLOW_SPECIAL_CHARACTERS=false

# Photo Processing
THUMBNAIL_SIZE=150
STANDARD_SIZE=320
HIGH_RES_SIZE=800
JPEG_QUALITY=85

# API Gateway Settings (for search endpoint)
CORS_MAX_AGE=600
CORS_ALLOW_CREDENTIALS=false